/* Camada de opacidade sobre os slides */
.overlay {
  position: absolute;
  /* top: 90px; */
  left: 0;
  width: 100%;
  height: 800px;
  background-color: #083045;
  opacity: 0.7; /* Opacidade de 70% */
  z-index: 1; /* Fica abaixo do título e acima das imagens */
}

.carousel {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.carousel-slides {
  display: flex;
  transition: transform 0.5s ease-in-out;
  height: 800px;
}

.carousel-slide {
  min-width: 100%;
}

.carousel-slide img {
  width: 100%;
  display: block;
}

